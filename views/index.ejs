<%- include('header') -%> 
    <div class="box" id="heading">
        <h1><%=day%></h1>
    </div>

    <div class="box">

        <% for( let i = 0; i< add.length; i++ ) { %>
        <div class="item">
            <input type="checkbox">
            <p><%= add[i] %></p>
        </div>
        <% } %>

        <form action="/" method="post">

            <input type="text" name="listAdd" placeholder="New item" autocomplete="off">
            <button type="submit" name="type" value="<%=day%>">+</button>
    </div>

<%- include('footer') -%>