<%- include('header') -%>
<div class="box" id="heading">
    <h1><%=day%></h1>
</div>

<div class="box">

    <% add.forEach(function(item){ %>
    <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%=item._id%>" onchange="this.form.submit()">
            <p><%= item.name %></p>
        </div>
        <input type="hidden" name="list" value="<%=day%>"></input>
    </form>
    <% });%>

    <form class="item" action="/" method="post">

        <input type="text" name="listAdd" placeholder="New item" autocomplete="off">
        <button type="submit" name="type" value="<%=day%>">+</button>
</div>

<%- include('footer') -%>